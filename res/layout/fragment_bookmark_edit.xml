<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp" >

    <TextView
        android:id="@+id/bookmarkTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/bookmarkTitleEdit"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:text="@string/bookmark_title" />
    
    <EditText
        android:id="@+id/bookmarkTitleEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:inputType="text"
        android:ems="10">
    </EditText>

    <TextView
        android:id="@+id/bookmarkDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/bookmarkDescriptionEdit"
        android:layout_below="@id/bookmarkTitle"
        android:layout_alignParentLeft="true"
        android:text="@string/bookmark_description" />

    <EditText
        android:id="@+id/bookmarkDescriptionEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bookmarkTitleEdit"
        android:layout_alignParentRight="true"
        android:layout_marginTop="16dp"
        android:inputType="text"
        android:ems="10" />
    
    <TextView
        android:id="@+id/bookmarkUri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/bookmarkUriEdit"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/bookmarkDescription"
        android:text="@string/bookmark_uri" />
    
    <EditText
        android:id="@+id/bookmarkUriEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/bookmarkDescriptionEdit"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textUri"
        android:hint="@string/bookmark_hint_uri" />

</RelativeLayout>