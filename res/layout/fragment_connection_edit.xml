<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp" >

    <TextView
        android:id="@+id/connectionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/connectionTitleEdit"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:text="@string/connection_title" />
    
    <EditText
        android:id="@+id/connectionTitleEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:inputType="text"
        android:ems="10">
    </EditText>

    <TextView
        android:id="@+id/connectionDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/connectionDescriptionEdit"
        android:layout_below="@id/connectionTitle"
        android:layout_alignParentLeft="true"
        android:text="@string/connection_description" />

    <EditText
        android:id="@+id/connectionDescriptionEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/connectionTitleEdit"
        android:layout_alignParentRight="true"
        android:layout_marginTop="16dp"
        android:inputType="text"
        android:ems="10" />
    
    <TextView
        android:id="@+id/connectionUri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/connectionUriEdit"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/connectionDescription"
        android:text="@string/connection_uri" />
    
    <EditText
        android:id="@+id/connectionUriEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/connectionDescriptionEdit"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textUri"
        android:hint="@string/connection_hint_uri" />

</RelativeLayout>