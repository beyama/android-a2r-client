<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="eu.addicted2random.a2rclient"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <service android:name="eu.addicted2random.a2rclient.net.ConnectionService" />

        <activity
            android:name="eu.addicted2random.a2rclient.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="eu.addicted2random.a2rclient.ControlGridActivity"
            android:label="@string/title_activity_control_grid" >
        </activity>
        <activity
            android:name="eu.addicted2random.a2rclient.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="eu.addicted2random.a2rclient.BookmarkEditActivity"
            android:label="@string/title_activity_bookmark_edit"
            android:parentActivityName="eu.addicted2random.a2rclient.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="eu.addicted2random.a2rclient.MainActivity" />
        </activity>
        <activity
            android:name="eu.addicted2random.a2rclient.AboutActivity"
            android:label="@string/title_activity_about" >
        </activity>
    </application>

</manifest>